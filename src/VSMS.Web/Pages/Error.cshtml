@page
@model VSMS.Web.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="text-center mt-5">
    <h1 class="display-4"><i class="bi bi-exclamation-triangle text-warning"></i></h1>
    <h2>Something went wrong</h2>
    <p class="lead">We're sorry, but something unexpected happened. Please try again.</p>

    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">Go Back</a>
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mt-5">
            <p class="text-muted small">
                If the problem continues, contact the office and reference this ID:
            </p>
            <code class="small">@Model.RequestId</code>
        </div>
    }
</div>
