@page
@model VSMS.Web.Pages.Admin.Calendar.EditShiftModel
@{
    Layout = null;
}

@if (Model.Shift == null)
{
    <div class="modal-header">
        <h5 class="modal-title">Shift Not Found</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <p>This shift could not be found.</p>
    </div>
}
else
{
    <div class="modal-header">
        <h5 class="modal-title">
            @Model.Shift.Date.ToString("ddd, MMM d") - @Model.Shift.TimeSlot.Label
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <form method="post" hx-post="/admin/calendar/edit-shift" hx-swap="none">
        <div class="modal-body">
            <input type="hidden" name="shiftId" value="@Model.Shift.Id" />

            <div class="mb-3">
                <label class="form-label">Role</label>
                <p class="form-control-plaintext">
                    <span class="badge @(Model.Shift.Role == ShiftRole.Phone ? "bg-info" : "bg-primary")">
                        @Model.Shift.Role
                    </span>
                </p>
            </div>

            <div class="mb-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="0" selected="@(Model.Shift.Status == ShiftStatus.Open)">Open</option>
                    <option value="1" selected="@(Model.Shift.Status == ShiftStatus.Assigned)">Assigned</option>
                    <option value="2" selected="@(Model.Shift.Status == ShiftStatus.Confirmed)">Confirmed</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Volunteer</label>
                <select name="volunteerId" class="form-select">
                    <option value="">-- Unassigned --</option>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <option value="@volunteer.Id" selected="@(volunteer.Id == Model.Shift.VolunteerId)">
                            @volunteer.Name
                        </option>
                    }
                </select>
            </div>

            @if (Model.Shift.VolunteerId != null)
            {
                <div class="mb-3">
                    <small class="text-muted">
                        @if (Model.Shift.ConfirmedAt != null)
                        {
                            <span>Confirmed @Model.Shift.ConfirmedAt?.ToString("MMM d, h:mm tt")</span>
                        }
                        else if (Model.Shift.AssignedAt != null)
                        {
                            <span>Assigned @Model.Shift.AssignedAt?.ToString("MMM d, h:mm tt")</span>
                        }
                    </small>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}

<script>
    document.body.addEventListener('htmx:afterRequest', function(evt) {
        if (evt.detail.successful && evt.detail.pathInfo.requestPath === '/admin/calendar/edit-shift') {
            var modal = bootstrap.Modal.getInstance(document.getElementById('shiftModal'));
            if (modal) modal.hide();
            location.reload();
        }
    });
</script>
