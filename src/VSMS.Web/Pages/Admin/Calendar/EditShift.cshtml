@page "/admin/calendar/edit-shift"
@model VSMS.Web.Pages.Admin.Calendar.EditShiftModel
@using VSMS.Core.Enums
@{
    Layout = null;
}

@if (Model.Shift == null)
{
    <div class="modal-header">
        <h5 class="modal-title">Shift Not Found</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
        <p>This shift could not be found.</p>
    </div>
}
else
{
    <div class="modal-header">
        <h5 class="modal-title">
            @Model.Shift.Date.ToString("ddd, MMM d") - @Model.Shift.TimeSlot.Label
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <form method="post" hx-post="/admin/calendar/edit-shift" hx-swap="none">
        <div class="modal-body">
            <input type="hidden" name="shiftId" value="@Model.Shift.Id" />

            <div class="mb-3">
                <label class="form-label">Role</label>
                <select name="role" class="form-select">
                    <option value="0" selected="@(Model.Shift.Role == ShiftRole.InPerson)">In-Person</option>
                    <option value="1" selected="@(Model.Shift.Role == ShiftRole.Phone)">Phone</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Primary Volunteer</label>
                <select name="volunteerId" id="volunteerSelect" class="form-select volunteer-select" style="width: 100%;">
                    <option value="">-- Unassigned --</option>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <option value="@volunteer.Id" selected="@(volunteer.Id == Model.Shift.VolunteerId)">
                            @volunteer.Name - @volunteer.Email
                        </option>
                    }
                </select>
                @if (Model.Shift.VolunteerId != null)
                {
                    <small class="text-muted">
                        @if (Model.Shift.ConfirmedAt != null)
                        {
                            <span>Confirmed @Model.Shift.ConfirmedAt?.ToString("MMM d, h:mm tt")</span>
                        }
                        else if (Model.Shift.AssignedAt != null)
                        {
                            <span>Assigned @Model.Shift.AssignedAt?.ToString("MMM d, h:mm tt")</span>
                        }
                    </small>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Backup 1</label>
                <select name="backup1VolunteerId" id="backup1Select" class="form-select volunteer-select" style="width: 100%;">
                    <option value="">-- None --</option>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <option value="@volunteer.Id" selected="@(volunteer.Id == Model.Shift.Backup1VolunteerId)">
                            @volunteer.Name - @volunteer.Email
                        </option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Backup 2</label>
                <select name="backup2VolunteerId" id="backup2Select" class="form-select volunteer-select" style="width: 100%;">
                    <option value="">-- None --</option>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <option value="@volunteer.Id" selected="@(volunteer.Id == Model.Shift.Backup2VolunteerId)">
                            @volunteer.Name - @volunteer.Email
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">
                <span class="htmx-indicator spinner-border spinner-border-sm me-1" role="status"></span>
                Save
            </button>
        </div>
    </form>
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        $('.volunteer-select').select2({
            theme: 'bootstrap-5',
            dropdownParent: $('#shiftModal'),
            placeholder: 'Search volunteers...',
            allowClear: true
        });
    });

    document.body.addEventListener('htmx:afterRequest', function(evt) {
        if (evt.detail.successful && evt.detail.pathInfo.requestPath === '/admin/calendar/edit-shift' && evt.detail.requestConfig.verb === 'post') {
            var modal = bootstrap.Modal.getInstance(document.getElementById('shiftModal'));
            if (modal) modal.hide();

            // Update the shift cell with the response HTML
            var shiftId = new FormData(evt.detail.elt).get('shiftId');
            var cellElement = document.getElementById('shift-cell-' + shiftId);
            if (cellElement && evt.detail.xhr.responseText) {
                var temp = document.createElement('div');
                temp.innerHTML = evt.detail.xhr.responseText;
                var newCell = temp.firstElementChild;
                cellElement.replaceWith(newCell);
                htmx.process(newCell);
            }
        }
    });
</script>
