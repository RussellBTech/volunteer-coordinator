@page "/admin/master-schedule"
@model VSMS.Web.Pages.Admin.MasterSchedule.IndexModel
@{
    ViewData["Title"] = "Master Schedule";
    Layout = "_AdminLayout";
}

<h2>Master Schedule</h2>
<p class="text-muted">Configure the default weekly schedule template. This is used when generating monthly calendars.</p>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Time Slot</th>
                @foreach (var day in Model.DaysOfWeek)
                {
                    <th class="text-center">@day</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var timeSlot in Model.TimeSlots)
            {
                <tr>
                    <td>
                        <strong>@timeSlot.Label</strong><br />
                        <small class="text-muted">@timeSlot.StartTime.ToString("h:mm tt")</small>
                    </td>
                    @foreach (var day in Enum.GetValues<DayOfWeek>())
                    {
                        <td class="p-2">
                            @foreach (var role in new[] { ShiftRole.InPerson, ShiftRole.Phone })
                            {
                                var entry = Model.GetEntry(day, timeSlot.Id, role);
                                <div class="mb-2 p-2 border rounded @(entry?.IsClosed == true ? "bg-secondary text-white" : "")"
                                     hx-get="/admin/master-schedule/edit-entry?dayOfWeek=@((int)day)&timeSlotId=@timeSlot.Id&role=@((int)role)"
                                     hx-target="#edit-modal-content"
                                     hx-trigger="click"
                                     data-bs-toggle="modal"
                                     data-bs-target="#editModal"
                                     style="cursor: pointer;">
                                    <small class="d-block fw-bold">@role</small>
                                    @if (entry?.IsClosed == true)
                                    {
                                        <small>CLOSED</small>
                                    }
                                    else if (entry?.DefaultVolunteer != null)
                                    {
                                        <small>@entry.DefaultVolunteer.Name</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Unassigned</small>
                                    }
                                </div>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" id="edit-modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Schedule Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Loading...
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.body.addEventListener('htmx:afterSwap', function(evt) {
            if (evt.detail.target.id === 'edit-modal-content') {
                // Modal content loaded
            }
        });
    </script>
}
