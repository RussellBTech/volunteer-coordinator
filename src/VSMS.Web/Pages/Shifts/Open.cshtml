@page
@model VSMS.Web.Pages.Shifts.OpenModel
@using VSMS.Core.Enums
@{
    ViewData["Title"] = "Open Shifts";
    Layout = "_Layout";
}

<h2>Open Shifts</h2>
<p class="lead">Browse available volunteer shifts and sign up to help.</p>

@if (Model.OpenShifts.Any())
{
    <div class="row">
        @foreach (var item in Model.OpenShifts)
        {
            var shift = item.Shift;
            var slot = item.AvailableSlot;
            var isPrimary = slot == "Primary";
            var cardClass = isPrimary ? "shift-open" : "border-secondary";
            var badgeClass = isPrimary ? "bg-primary" : "bg-secondary";
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100 @cardClass">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-1">@shift.Date.ToString("dddd, MMMM d")</h5>
                            <span class="badge @badgeClass">@slot</span>
                        </div>
                        <p class="card-text">
                            <strong>@shift.TimeSlot.Label</strong><br />
                            @shift.TimeSlot.StartTime.ToString("h:mm tt") -
                            @shift.TimeSlot.StartTime.AddMinutes(shift.TimeSlot.DurationMinutes).ToString("h:mm tt")
                        </p>
                        <div class="mb-2">
                            <span class="badge @(shift.Role == ShiftRole.Phone ? "bg-info" : "bg-dark")">
                                <i class="bi @(shift.Role == ShiftRole.Phone ? "bi-telephone" : "bi-person")"></i>
                                @shift.Role
                            </span>
                        </div>
                        @if (isPrimary)
                        {
                            <p class="small text-muted">Primary volunteer needed for this shift.</p>
                        }
                        else
                        {
                            <p class="small text-muted">
                                Backup slot available. Primary: @(shift.Volunteer?.Name ?? "TBD")
                            </p>
                        }
                    </div>
                    <div class="card-footer">
                        <a href="/shifts/request/@shift.Id?slot=@slot.Replace(" ", "")" class="btn @(isPrimary ? "btn-primary" : "btn-outline-secondary") btn-sm">
                            Request as @slot
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No Open Shifts</h4>
        <p>All shifts are currently filled. Check back later or contact the office if you'd like to volunteer.</p>
    </div>
}
