@page
@model VSMS.Web.Pages.Shifts.MyShiftsModel
@using VSMS.Core.Enums
@{
    ViewData["Title"] = "My Shifts";
    Layout = "_Layout";
}

<h2>My Shifts</h2>
<p class="lead">View your assigned and upcoming volunteer shifts.</p>

<form method="post" class="row g-3 mb-4">
    <div class="col-md-6">
        <label for="email" class="form-label">Your Email Address</label>
        <input type="email" class="form-control" id="email" name="email"
               value="@Model.Email" placeholder="volunteer@example.com" required />
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">View My Shifts</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning">
        @Model.ErrorMessage
    </div>
}

@if (Model.ShowResults && Model.Volunteer != null)
{
    <div class="alert alert-info mb-4 d-flex justify-content-between align-items-center">
        <div>
            <strong>Welcome, @Model.Volunteer.Name!</strong>
        </div>
        <form method="post" asp-page-handler="ClearEmail" class="d-inline">
            <button type="submit" class="btn btn-link btn-sm p-0 text-muted">Use different email</button>
        </form>
    </div>

    @if (Model.PendingRequests.Any())
    {
        <div class="card border-warning mb-4">
            <div class="card-header bg-warning text-dark">
                <strong>Pending Requests</strong>
            </div>
            <div class="card-body">
                <p class="card-text small text-muted mb-3">
                    These requests are waiting for admin approval. You'll receive an email once approved.
                </p>
                <div class="row">
                    @foreach (var request in Model.PendingRequests)
                    {
                        var slotLabel = request.RequestedSlot switch
                        {
                            SlotType.Backup1 => "Backup 1",
                            SlotType.Backup2 => "Backup 2",
                            _ => "Primary"
                        };
                        <div class="col-md-6 mb-2">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                <div>
                                    <strong>@request.Shift.Date.ToString("ddd, MMM d")</strong>
                                    <span class="text-muted">@request.Shift.TimeSlot.Label</span>
                                    <span class="badge bg-secondary ms-1">@slotLabel</span>
                                </div>
                                <small class="text-muted">Requested @request.RequestedAt.ToString("MMM d")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <h3>Upcoming Shifts</h3>
    @if (Model.UpcomingShifts.Any())
    {
        <div class="row mb-4">
            @foreach (var item in Model.UpcomingShifts)
            {
                var shift = item.Shift;
                var assignmentRole = item.Role;
                var statusClass = shift.Status switch
                {
                    ShiftStatus.Confirmed => "shift-confirmed",
                    ShiftStatus.Assigned => "shift-assigned",
                    _ => "shift-open"
                };
                var statusBadge = shift.Status switch
                {
                    ShiftStatus.Confirmed => "bg-success status-confirmed",
                    ShiftStatus.Assigned => "bg-warning text-dark status-assigned",
                    _ => "bg-secondary status-open"
                };
                var roleBadge = assignmentRole switch
                {
                    "Primary" => "bg-primary",
                    "Backup 1" => "bg-secondary",
                    _ => "bg-secondary"
                };
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100 @statusClass">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title">@shift.Date.ToString("dddd, MMMM d")</h5>
                                <span class="badge @statusBadge">@shift.Status</span>
                            </div>
                            <p class="card-text">
                                <strong>@shift.TimeSlot.Label</strong><br />
                                @shift.TimeSlot.StartTime.ToString("h:mm tt") -
                                @shift.TimeSlot.StartTime.AddMinutes(shift.TimeSlot.DurationMinutes).ToString("h:mm tt")
                            </p>
                            <div class="mb-2">
                                <span class="badge @roleBadge me-1">@assignmentRole</span>
                                <span class="badge @(shift.Role == ShiftRole.Phone ? "bg-info" : "bg-dark")">
                                    @shift.Role
                                </span>
                            </div>
                            @if (assignmentRole != "Primary")
                            {
                                <p class="small text-muted mt-2">
                                    You are a backup for this shift. You'll be contacted if the primary volunteer is unavailable.
                                </p>
                            }
                            else if (shift.Status == ShiftStatus.Assigned)
                            {
                                <p class="small text-muted mt-2">
                                    Please check your email for the confirmation link.
                                </p>
                            }
                            else if (shift.Status == ShiftStatus.Confirmed && shift.ConfirmedAt.HasValue)
                            {
                                <p class="small text-muted mt-2">
                                    Confirmed on @shift.ConfirmedAt.Value.ToString("MMM d 'at' h:mm tt")
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-secondary mb-4">
            <p class="mb-0">You have no upcoming shifts scheduled.</p>
            <a href="/shifts/open" class="btn btn-outline-primary btn-sm mt-2">Browse Open Shifts</a>
        </div>
    }

    @if (Model.PastShifts.Any())
    {
        <h3>Recent Past Shifts</h3>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Assignment</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PastShifts)
                    {
                        var shift = item.Shift;
                        var assignmentRole = item.Role;
                        <tr>
                            <td>@shift.Date.ToString("MMM d, yyyy")</td>
                            <td>@shift.TimeSlot.Label (@shift.TimeSlot.StartTime.ToString("h:mm tt"))</td>
                            <td><span class="badge @(assignmentRole == "Primary" ? "bg-primary" : "bg-secondary")">@assignmentRole</span></td>
                            <td>@shift.Role</td>
                            <td>
                                @if (shift.Status == ShiftStatus.Confirmed)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@shift.Status</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
